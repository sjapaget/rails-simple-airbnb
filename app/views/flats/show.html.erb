<div class="container mt-2 mx-auto">
  <div class="row">
  <div class="col-6">

    <div class="card">

      <div class="card-header">
        <h1><%= @flat.name %></h1>
        <p><%= @flat.address %></p>
      </div>

      <div class="card-body">
        <h3 class="card-title">Some details</h3>
        <p class="card-text"><%= @flat.description %></p>
      </div>

       <div class="card-footer">
          <div class="d-flex justify-content-between">
            <p class=""><%= @flat.price_per_night %> <i class="fa-solid fa-euro-sign"></i></p>
            <p class=""><%= @flat.number_of_guests %> <i class="fa-solid fa-people-roof"></i></p>

            <%= link_to edit_flat_path(@flat) do %>
              <p><i class="fa-solid fa-pen"></i></p>
            <% end %>

          </div>
        </div>

    </div>
  </div>
  <div class="col-6">
    <%= image_tag "https://images.unsplash.com/photo-1451153378752-16ef2b36ad05?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=867&q=80", class: "img-fluid rounded h-75"  %>
  </div>
  </div>

  <div class="row mt-2">
  <div class="col-12">
    <h4>Book Now</h4>
  </div>
  </div>





</div>
